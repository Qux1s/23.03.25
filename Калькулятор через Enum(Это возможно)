#include <iostream>
#include <limits>

enum class Operator
{
	ADD,
	SUBTRACT,
	MULTIPLY,
	DIVIDE,
	INVALID
};

void calculator();
double userPrintNumber();
char userPrintOperation();
void printResult(double, double, Operator);
bool isContinue();
void ignoreLine();
Operator converterOperator(char userOperator);



int main()

{

	calculator();

}

void calculator()
{

	do
	{
		std::cout << "Enter a first value: ";

		double userNumberOne{ userPrintNumber() };

		std::cout << "Enter a second value: ";

		double userNumberTwo{ userPrintNumber() };

		Operator userOperator = converterOperator(userPrintOperation());

		printResult(userNumberOne, userNumberTwo, userOperator);

	} while (isContinue());

}

double userPrintNumber()

{

	while (true)
	{

		double userFirst{};

		std::cin >> userFirst;


		if (!std::cin.fail())
		{
			ignoreLine();

			return userFirst;
		}
		else
		{
			std::cin.clear();

			ignoreLine();

			std::cout << "Oops, that input is invalid.  Please try again.\n";
		}
	}

}

char userPrintOperation()

{
	while (true)
	{
		std::cout << "Enter one of the following: +, -, *, or /: ";

		char operation{};

		std::cin >> operation;

		ignoreLine();

		switch (operation)
		{
		case '+':
		case '-':
		case '*':
		case '/':
			return operation;
		default:
			std::cout << "Oops, that input is invalid.  Please try again.\n";
		}
	}
}

void printResult(double userFirst, double userSecond, Operator userOperator)

{
	switch (userOperator)
	{
	case Operator::ADD:
		std::cout << userFirst << " + " << userSecond << " is " << userFirst + userSecond << '\n';
		break;
	case Operator::SUBTRACT:
		std::cout << userFirst << " - " << userSecond << " is " << userFirst - userSecond << '\n';
		break;
	case Operator::MULTIPLY:
		std::cout << userFirst << " * " << userSecond << " is " << userFirst * userSecond << '\n';
		break;
	case Operator::DIVIDE:
		std::cout << userFirst << " / " << userSecond << " is " << userFirst / userSecond << '\n';
		break;
	default:
		std::cerr << "Something went wrong: printResult() got an invalid operator.\n";
	}
}

bool isContinue()
{
	std::cout << "Enter 'y' to continue or n to stop: ";

	char userResult{};

	std::cin >> userResult;

	return userResult == 'y' || userResult == 'Y';
}

void ignoreLine()
{
	std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');
}

Operator converterOperator(char userOperator)
{
	switch (userOperator)
	{
	case '+':
		return Operator::ADD;
	case '-':
		return Operator::SUBTRACT;
	case '*':
		return Operator::MULTIPLY;
	case '/':
		return Operator::DIVIDE;
	default:
		return Operator::INVALID;
	}
}
