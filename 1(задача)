int userPrintInteger()
{

    while (true)
    {

        int userInteger{};

        std::cin >> userInteger;


        if (std::cin.fail())
        {
            std::cin.clear();

            ignoreLine();

            std::cout << "Oops, that input is invalid.  Please try again.\n";
        }

        ignoreLine();

        return userInteger;


//        if (!std::cin.fail())
